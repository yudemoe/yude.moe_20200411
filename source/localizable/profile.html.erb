  <% content_for :script do %>
    <!-- discord status -->
    <script await>
    var req = new XMLHttpRequest();
    req.open('GET', 'https://yude.glitch.me', true);
    req.onload = function () {
      var status = this.response;
      if (status == "online") {
        var color = '#43b581'
      }
      if (status == "idle") {
        var color = '#faa61a'
      }
      if (status == "dnd") {
        var color = '#f04747'
      }
      if (status == "offline") {
        var color = '#747f8d'
      }
      var str = document.getElementById("discord").innerHTML;
      str = str.replace(
        '<i class="fas fa-spinner fa-pulse"></i>',
        '<i style="color: ' + color + '" class="fab fa-discord"></i>');
        str = str.replace(
        '<span class="sr-only">Loading...</span></span>',
        '');
      document.getElementById("discord").innerHTML = str;
      console.log("Got Discord status: "+status+" and color is "+color+" .")
    }
    req.send();
  </script>
    <% end %>
